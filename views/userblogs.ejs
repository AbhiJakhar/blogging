<%- include('partials/header.ejs') %>
   

   <% if(listBlogs.length==0) {%>
    <div class="text-center noblog-cont">
    <div class="row"> 
    <div class="col-lg-4">
         <h1 class="noblog-h1">You haven't created a blog yet. Create one?</h1>
         <br>
         <div class="d-grid gap-2 col-6 mx-auto">
          <a href="/create">
            <div class="d-grid gap-2">
             <button class="btn btn-primary" type="button">Create Blog</button>
            </div>
          </a>
         </div>
    </div>
    <div class="col-lg-8">
      <img src="images/blog.jpg" alt="blog image here" class="noblog">
    </div>
    </div>
    </div>
      

    <% } else { %>
        <div class="container blogs-cont">
          
    <ul list-style-type="none" > 
        <% for(let blog of listBlogs){ %>
        <li list-style-type="none">
            <h2><%= blog.blog_title %></h2>
            <p> <%= blog.blog_author %><p>
            <div class="pretext">
            <p><%= blog.blog_description %></p>
          </div>
            <br>
            <form method="post" action="/updatepost" class="update-delete">
            <button class="btn btn-secondary" value=<%=blog.id%> name="updatebutton" type="submit" >Update</button>
            </form>
            <form method="post" action="/delete" class="update-delete">
            <button class="btn btn-secondary" value=<%=blog.id%> name="deletebutton" type="submit">Delete</button>
            </form>
        </li>
        <% } %>
    </ul>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a href="/create">
          <div class="d-grid gap-2">
           <button class="btn btn-secondary" type="button">Add Blog</button>
          </div>
        </a>
       </div>
</div>
<% } %>




<%- include('partials/footer.ejs') %>